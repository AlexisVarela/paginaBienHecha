</div>
<div class="principal2">
  <h2>Ejemplos de cortes disponibles</h2>
  <div class="firtsCards">
    <% if (cortes.length > 0) {%>
      <% cortes.slice(0, 6).forEach((corte, index) => { %>
        <div class="card" data-id="<%= index %>">
          <div class="imgn">
            <img src="/img/cortes/<%=corte.imagen%>" alt="corte <%=corte.corte%>">
          </div>
          <p>Corte: <%= corte.corte %></p>
          <p>Precio: <%= corte.precio %></p>
        </div>
      <%});%>
    <%} else {%>
      <p class="noCortes">No hay cortes disponibles</p>
    <% } %>
  </div>
</div>

